@model ShoppingCartViewModel

<h2>Your shopping cart</h2>
<h4>Here are the delicious arts in your shopping cart.</h4>
<table class="table table-bordered table-striped">
    <thead>
        <tr>

            <th>Article</th>
            <th class="text-right">Hire from</th>
            <th class="text-right">Hire till</th>
            <th class="text-right">Price</th>

        </tr>
    </thead>
    <tbody>
    @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
    {
        <tr>
            <!-- <td class="text-center">line.Amount</td> -->
            <td class="text-left">@line.Article.Name</td>
            <td class="text-right">@line.Article.HireFrom</td>
            <td class="text-right">@line.Article.HireTill</td>
            <td class="text-right">@line.Article.Price.ToString("c")</td>

        </tr>
    }
    </tbody>
    <tfoot>
    <tr>
        <td colspan="3" class="text-left">Total:</td>
        <td class="text-right">
            @Model.ShoppingCartTotal.ToString("c")
        </td>
    </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Check out now!</a>
</div>