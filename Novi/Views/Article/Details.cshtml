
@model Article

<h2>@Model.Name</h2>

<div class="thumbnail">
    <img alt="@Model.Name" src="@Model.ImageUrl">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price</h3>
        <h3>
            <a href="#">@Model.Name</a>
        </h3>
        <h4>@Model.Description</h4>
        <p>@Model.Description</p>

            <h5>Hire from: @Model.HireFrom</h5>
            <h5>Hire till: @Model.HireTill</h5>





        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                   asp-route-articleId="@Model.ArticleId">Add to cart</a>
            </p>
        </div>

    </div>
</div>