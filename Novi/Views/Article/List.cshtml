@model ArticlesListViewModel


<h1>@Model.CurrentCategory</h1>

@foreach (var article in Model.Articles)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@article.ImageThumbnailUrl" alt="">
            <div class="caption">
                <h3 class="pull-right">@article.Price.ToString("c")</h3>
                <h3>
                    <a asp-controller="Article" asp-action="Details" asp-route-id="@article.ArticleId">@article.Name</a>
                </h3>
                <p>@article.Description</p>
            </div>
        </div>
    </div>
}